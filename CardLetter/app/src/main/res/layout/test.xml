        <!--TOP部分-->
        <RelativeLayout
            android:id="@+id/rlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >

            <LinearLayout
                android:layout_below="@+id/fragment_home_top_pagerview"
                android:id="@+id/line_layout"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="40dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:padding="5dp"
                    android:src="@drawable/red_table" />
                <ViewFlipper
                    android:id="@+id/marquee_view"
                    android:layout_width="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:autoStart="true"
                    android:flipInterval="2500"
                    android:inAnimation="@anim/anim_marquee_in"
                    android:outAnimation="@anim/anim_marquee_out" >
                </ViewFlipper>
            </LinearLayout>
            <LinearLayout
                android:layout_below="@id/line_layout"
                android:orientation="vertical"
                android:background="@color/colorbg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:id="@+id/view1"
                        android:layout_width="5dp"
                        android:layout_height="1dp"
                        android:background="@color/umeng_socialize_divider"/>
                    <View
                        android:layout_toRightOf="@+id/view1"
                        android:id="@+id/view2"
                        android:layout_width="10dp"
                        android:layout_height="1dp"
                        android:background="@color/white"/>
                    <View
                        android:layout_toRightOf="@+id/view2"
                        android:layout_width="5dp"
                        android:layout_height="1dp"
                        android:background="@color/umeng_socialize_divider"/>
                </RelativeLayout>
            <include layout="@layout/home_content_layout"/>
            <View
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/padding_color"/>
            </LinearLayout>

            <com.mt.cardletter.view.rollviewpager.RollPagerView
                android:id="@+id/fragment_home_top_pagerview"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                app:rollviewpager_play_delay="3000"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
            </com.mt.cardletter.view.rollviewpager.RollPagerView>
            <!--悬浮地图 搜索-->
            <RelativeLayout
                android:id="@+id/search_main_layout"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <!--地图-->
                <LinearLayout
                    android:id="@+id/locatio_address"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/shape_home_map"
                    android:padding="4dp">
                    <TextView
                        android:id="@+id/fragment_home_top_text_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="南京"
                        android:textSize="12sp"
                        android:textColor="@color/white" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="3dp"
                        android:src="@mipmap/cp_ic_locate" />
                </LinearLayout>
                <!--搜索-->
                <RelativeLayout
                    android:id="@+id/search_main_et_input"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_width="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@mipmap/search_icon"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            >
            <RelativeLayout
                android:id="@+id/part_1"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/main_red"
                android:layout_gravity="center_vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/text_1"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/text_shape"
                    android:text="1"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:textColor="@color/white"/>
                <TextView
                    android:paddingTop="5dp"
                    android:paddingLeft="5dp"
                    android:layout_toRightOf="@+id/text_1"
                    android:id="@+id/hk_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="还款提醒"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_alignParentRight="true"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:layout_toRightOf="@+id/text_1"
                    android:id="@+id/hk_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="几天到期"
                    android:textSize="10sp"
                    android:gravity="right"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_below="@+id/hk_date"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/text_red"
                    android:id="@+id/my_date"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text="我的卡包"
                    android:textSize="10sp"
                    android:textColor="@color/white"/>
            </RelativeLayout>
            <ImageView
                android:layout_width="10dp"
                android:layout_centerInParent="true"
                android:layout_height="match_parent"/>
            <RelativeLayout
                android:id="@+id/part_2"
                android:background="@color/main_blue"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/text_2"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/blue_shape"
                    android:text="2"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:textColor="@color/white"/>
                <TextView
                    android:paddingTop="5dp"
                    android:paddingLeft="5dp"
                    android:layout_toRightOf="@+id/text_2"
                    android:id="@+id/hk_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分兑换"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_alignParentRight="true"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:layout_toRightOf="@+id/text_2"
                    android:id="@+id/hk_date2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分兑换"
                    android:textSize="10sp"
                    android:gravity="right"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_below="@+id/hk_date2"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/text_blue"
                    android:id="@+id/my_date2"
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text="话费/加油卡"
                    android:textSize="10sp"
                    android:textColor="@color/white"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            >
            <RelativeLayout
                android:id="@+id/part_3"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/main_green"
                android:layout_gravity="center_vertical"
                android:layout_weight="1">

                <TextView
                    android:paddingTop="5dp"
                    android:paddingLeft="5dp"
                    android:layout_toRightOf="@+id/text_3"
                    android:id="@+id/hk_tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="信用卡使用攻略"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_alignParentRight="true"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:layout_toRightOf="@+id/text_3"
                    android:id="@+id/hk_date3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="口袋的卡"
                    android:textSize="10sp"
                    android:gravity="right"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_below="@+id/hk_date3"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/text_green"
                    android:id="@+id/my_date3"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text="你的卡信"
                    android:textSize="10sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/text_3"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/green_shape"
                    android:text="3"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>
            <ImageView
                android:layout_width="10dp"
                android:layout_centerInParent="true"
                android:layout_height="match_parent"/>
            <RelativeLayout
                android:id="@+id/part_4"
                android:background="@color/main_yellow"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/text_4"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/yellow_shape"
                    android:text="4"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:textColor="@color/white"/>
                <TextView
                    android:paddingTop="5dp"
                    android:paddingLeft="5dp"
                    android:layout_toRightOf="@+id/text_4"
                    android:id="@+id/hk_tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="信用卡申请"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_alignParentRight="true"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:layout_toRightOf="@+id/text_4"
                    android:id="@+id/hk_date4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="快速下卡"
                    android:textSize="10sp"
                    android:gravity="right"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_below="@+id/hk_date4"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/text_yellow"
                    android:id="@+id/my_date4"
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text="个人信用卡"
                    android:textSize="10sp"
                    android:textColor="@color/white"/>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/padding_color"/>
        <RelativeLayout
            android:id="@+id/gallery_1"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="80dp"
            android:clipChildren="false"
            android:layerType="software"
           >

            <android.support.v4.view.ViewPager
                android:id="@+id/gallery_1_viewpager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:clipChildren="false" >
            </android.support.v4.view.ViewPager>
        </RelativeLayout >
        <!--保持部分-->
        <LinearLayout
            android:id="@+id/search02"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="vertical">

            <com.mt.cardletter.view.tabstrip.PagerSlidingTabStrip

                android:background="@color/white"
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                app:pstsIndicatorColor="@color/color_text_red"
                app:selectedTabTextColor="@color/color_text_red"
                app:tabTextSize="12sp"
                app:tabTextColor="@color/black"
                app:pstsUnderlineHeight="0.5dp"
                app:pstsUnderlineColor="@color/colorspaceline"
                app:pstsTabPaddingLeftRight="12dp"
                app:pstsIndicatorHeight="2dp"
                app:pstsDividerColor="@android:color/transparent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="750dp">
            <com.mt.cardletter.view.Scroll.MyViewPager
                android:id="@+id/pager"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    </LinearLayout>
</com.mt.cardletter.view.Scroll.TopScrollView>

<LinearLayout
    android:id="@+id/search01"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="vertical" >
</LinearLayout>
<LinearLayout
    android:id="@+id/search03"
    android:visibility="gone"
    android:background="@color/background_tab_pressed"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="75dp"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="vertical" >
</LinearLayout>
</RelativeLayout>
