<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mt.cardletter.activity.SetailsActivity">
    <include layout="@layout/action_title"
        android:id="@+id/include" />

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/include"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:padding="2dp"
                android:id="@+id/setails_rl"
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <ImageView
                    android:id="@+id/setails_big_img"
                    android:src="@drawable/new02"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <View
                    android:layout_alignParentBottom="true"
                    android:background="#33005500"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"/>

            </RelativeLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/setails_ll1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/setails_title"
                        android:layout_marginRight="100dp"
                        android:layout_marginTop="10dp"
                        android:text="加载中 ..."
                        android:textSize="14sp"
                        android:textColor="@color/umeng_socialize_text_share_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <RelativeLayout
                        android:padding="5dp"
                        android:layout_marginLeft="280dp"
                        android:layout_marginTop="5dp"
                        android:id="@+id/collection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >
                        <ImageView
                            android:id="@+id/pic_one"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerHorizontal="true"
                            android:src="@mipmap/collect"/>
                        <TextView
                            android:gravity="center_horizontal"
                            android:id="@+id/pic_tow"
                            android:layout_below="@+id/pic_one"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/color_text_gray_66"
                            android:textSize="10sp"
                            android:text="收藏"/>
                    </RelativeLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:text="优惠信息："
                        android:textSize="12sp"
                        android:textColor="@color/umeng_socialize_text_share_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/setails_discounts"
                        android:layout_marginTop="10dp"

                        android:textSize="12sp"
                        android:textColor="@color/umeng_socialize_text_share_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:text="联系电话："
                        android:textSize="12sp"
                        android:textColor="@color/umeng_socialize_text_share_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/setails_tel"
                        android:layout_marginTop="10dp"
                        android:textSize="12sp"
                        android:textColor="@color/umeng_socialize_text_share_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:text="有效期："
                        android:textSize="12sp"
                        android:textColor="@color/umeng_socialize_text_share_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/setails_dateline"
                        android:layout_marginTop="10dp"
                        android:textSize="12sp"
                        android:textColor="@color/umeng_socialize_text_share_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:text="详细地址："
                        android:textSize="12sp"
                        android:textColor="@color/umeng_socialize_text_share_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/setails_address"
                        android:layout_marginTop="10dp"
                        android:textSize="12sp"
                        android:textColor="@color/umeng_socialize_text_share_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:text="优惠对象："
                        android:textSize="12sp"
                        android:textColor="@color/umeng_socialize_text_share_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_marginLeft="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/item_img"
                                android:src="@drawable/new02"
                                android:scaleType="centerCrop"
                                android:layout_width="80dp"
                                android:layout_height="60dp" />
                            <TextView
                                android:id="@+id/setails_obj"
                                android:layout_marginTop="5dp"
                                android:layout_below="@id/item_img"

                                android:textSize="10sp"
                                android:gravity="center"
                                android:textColor="@color/umeng_socialize_text_share_content"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:text="优惠详情："
                        android:textSize="12sp"
                        android:textColor="@color/umeng_socialize_text_share_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                /LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/setails_centent"
                        android:layout_marginTop="10dp"
                        android:textSize="12sp"
                        android:textColor="@color/umeng_socialize_text_share_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

