<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include android:id="@+id/pay_title" layout="@layout/action_title"/>
    <!--<ScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:scrollbars="none"-->
        <!--android:layout_height="match_parent">-->
        <LinearLayout

            android:layout_below="@id/pay_title"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:id="@+id/pay_time"
                    android:textColor="@color/color_bg_balck_99"
                    android:textSize="14sp"
                    android:text="支付剩余时间 30:00"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/color_text_red"
                        android:gravity="center"
                        android:textSize="12dp"
                        android:text="￥"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:gravity="center"
                        android:id="@+id/pay_pice"
                        android:textColor="@color/color_text_red"
                        android:textSize="16sp"
                        android:text="198.00"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:background="@color/padding_color"
                android:layout_width="match_parent"
                android:layout_height="5dp"/>
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
               <LinearLayout
                   android:id="@+id/pay_ll"
                   android:orientation="vertical"
                   android:layout_width="150dp"
                   android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:padding="5dp"
                            android:layout_centerVertical="true"
                            android:id="@+id/pay_img2"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/weixinpay"
                            android:layout_width="35dp"
                            android:layout_height="35dp" />
                        <TextView
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/pay_img2"
                            android:textSize="14sp"
                            android:layout_marginLeft="15dp"
                            android:layout_gravity="center"
                            android:text="微信支付"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_centerVertical="true"
                            android:id="@+id/pay_img1"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/alipay"
                            android:layout_width="35dp"
                            android:layout_height="35dp" />
                        <TextView
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/pay_img1"
                            android:textSize="14sp"
                            android:layout_marginLeft="15dp"
                            android:layout_gravity="center"
                            android:text="支付宝支付"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
               </LinearLayout>
                <RadioGroup
                   android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:layout_width="35dp"
                        android:layout_height="35dp" />
                    <RadioButton
                        android:layout_marginTop="10dp"
                        android:layout_width="35dp"
                        android:layout_height="35dp" />
                </RadioGroup>
            </RelativeLayout>
            <View
                android:background="@color/padding_color"
                android:layout_width="match_parent"
                android:layout_height="5dp"/>

        </LinearLayout>
    <!--</ScrollView>-->
    <TextView
        android:background="@color/main_title_bg"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:textSize="16sp"
        android:text="确认支付"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="45dp" />
</RelativeLayout>