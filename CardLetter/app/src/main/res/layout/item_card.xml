<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="10dp"
    android:orientation="horizontal"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="10dp">

    <RelativeLayout
        android:id="@+id/bank_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        >

        <ImageView
            android:id="@+id/pic"
            android:src="@drawable/bank"
            android:layout_width="40dp"
            android:layout_height="40dp"
            />
        <TextView
            android:id="@+id/card_number"
            android:layout_toRightOf="@+id/pic"
            android:paddingLeft="10dp"
            android:text="工行 9066 0336"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="12dp"
            android:textColor="@color/color_text_black_31"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="40dp" />
        <RelativeLayout
            android:paddingTop="10dp"
            android:padding="5dp"
            android:layout_below="@+id/pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/repay_layout"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/repay_value"
                    android:text="20006"
                    android:textSize="12dp"
                    android:textColor="@color/color_text_black_31"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/repay_text"
                    android:layout_below="@+id/repay_value"
                    android:text="应还余额"
                    android:textSize="12dp"
                    android:textColor="@color/color_text_black_31"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView
                android:id="@+id/repay_date"
                android:text="逾期10天"
                android:textSize="12dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/color_text_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/repay_btn"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/login_btn_bg"
                android:text="立即还款"
                android:gravity="center"
                android:textColor="@color/white"
                style="?android:attr/borderlessButtonStyle"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="35dp" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>