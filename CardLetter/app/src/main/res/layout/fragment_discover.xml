<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:orientation="vertical">
    <include layout="@layout/action_title"/>
    <com.mt.cardletter.view.tabstrip.PagerSlidingTabStrip
        android:id="@+id/dis_tabs"
        android:layout_width="match_parent"
        android:layout_height="38dip"
        app:pstsIndicatorColor="@android:color/holo_blue_light"
        app:selectedTabTextColor="@android:color/holo_blue_light"
        app:tabTextSize="12sp"
        app:tabTextColor="@color/black"
        app:pstsUnderlineHeight="0.5dp"
        app:pstsUnderlineColor="@color/colorspaceline"
        app:pstsTabPaddingLeftRight="12dp"
        app:pstsIndicatorHeight="2dp"
        app:pstsDividerColor="@android:color/transparent"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
</LinearLayout>