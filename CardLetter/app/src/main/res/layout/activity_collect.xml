<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_collect"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mt.cardletter.activity.collect.CollectActivity">
    <include layout="@layout/action_title" />
    <com.mt.cardletter.view.pulltorefresh.PullToRefreshListView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/listView"
        ptr:ptrAnimationStyle="flip"
        ptr:ptrHeaderTextColor="@color/colorspaceline"
        ptr:ptrListViewExtrasEnabled="true"
        android:layout_marginTop="48dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>
</RelativeLayout>
