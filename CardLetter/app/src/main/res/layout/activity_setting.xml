            <!--android:textSize="16dp"-->
            <!--android:textColor="@color/color_text_red"-->
            <!--android:text="退出登录"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content" />-->
    <!--</LinearLayout>-->

    <View
        android:background="@drawable/divider"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
