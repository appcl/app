<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center"
    android:paddingLeft="20dp"
    android:layout_height="150dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp">
        <TextView
            android:id="@+id/jy_tv"
            android:textSize="12dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交易日期:"/>
        <TextView
            android:paddingLeft="10dp"
            android:layout_toRightOf="@+id/jy_tv"
            android:singleLine="true"
            android:ellipsize="end"
            android:id="@+id/item_trans"
            android:text="2018年01月05日"
            android:layout_centerVertical="true"
            android:textColor="@color/color_text_black_31"
            android:textSize="12dp"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp">
    <TextView
        android:id="@+id/jz_tv"
        android:textSize="12dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="记账日期:"/>
    <TextView
        android:id="@+id/item_post"
        android:text="2018年01月05日"
        android:paddingLeft="10dp"
        android:layout_toRightOf="@+id/jz_tv"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_centerVertical="true"
        android:textColor="@color/color_text_black_31"
        android:textSize="12dp"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp">
    <TextView
        android:id="@+id/zy_tv"
        android:textSize="12dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="交易摘要:"/>
    <TextView
        android:id="@+id/item_desc"
        android:text="支付宝还款"
        android:paddingLeft="10dp"
        android:layout_toRightOf="@+id/zy_tv"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_centerVertical="true"
        android:textColor="@color/color_text_black_31"
        android:textSize="12dp"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp">
    <TextView
        android:id="@+id/am_tv"
        android:textSize="12dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="记账金额:"/>
    <TextView
        android:id="@+id/item_amount"
        android:text="3000.0012+"
        android:paddingLeft="10dp"
        android:layout_toRightOf="@+id/am_tv"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_centerVertical="true"
        android:textColor="@color/color_text_black_31"
        android:textSize="12dp"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp">
    <TextView
        android:id="@+id/cn_tv"
        android:textSize="12dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="卡末后4位:"/>
    <TextView
        android:id="@+id/item_cardnum"
        android:text="5722"
        android:paddingLeft="10dp"
        android:layout_toRightOf="@+id/cn_tv"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_centerVertical="true"
        android:textColor="@color/color_text_black_31"
        android:textSize="12dp"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>

</LinearLayout>