<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="10dp"
    android:orientation="horizontal"
    card_view:cardBackgroundColor="@color/main_title_bg"
    card_view:cardCornerRadius="10dp">

    <RelativeLayout
        android:id="@+id/bank_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingLeft="10dp"
            >
            <TextView
                android:id="@+id/bill_card"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:text="- - - -  - - - -  - - - -  8 8 8 8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:paddingLeft="8dp"
                android:layout_toRightOf="@+id/bill_card"
                android:id="@+id/bill_name"
                android:text="王某某"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/bill_edit"
                android:paddingLeft="10dp"
                android:layout_toRightOf="@+id/bill_name"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/icon_edit"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        <RelativeLayout
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/bill_current_pay_tv"
                android:text="本期还款"
                android:textSize="12sp"
                android:textColor="@color/color_text_gray_c9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_below="@+id/bill_current_pay_tv"
                android:id="@+id/bill_current_pay"
                android:paddingBottom="10dp"
                android:text="8888"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_below="@+id/bill_current_pay"
                android:id="@+id/bill_low_pay_tv"
                android:text="最低还款:"
                android:textSize="12sp"
                android:textColor="@color/color_text_gray_c9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_below="@+id/bill_current_pay"
                android:layout_toRightOf="@+id/bill_low_pay_tv"
                android:id="@+id/bill_low_pay"
                android:paddingLeft="10dp"
                android:text="888"
                android:textSize="12sp"
                android:textColor="@color/color_text_gray_c9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingRight="10dp"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_alignParentRight="true"
                android:id="@+id/repay_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/bill_repayment_time_tv"
                    android:textSize="12sp"
                    android:gravity="right"
                    android:textColor="@color/color_text_gray_c9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="还款日期:"/>
                <TextView
                    android:layout_toRightOf="@+id/bill_repayment_time_tv"
                    android:id="@+id/bill_repayment_time"
                    android:textSize="12sp"
                    android:gravity="right"
                    android:textColor="@color/color_text_gray_c9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018.08.08"/>
            </RelativeLayout>
            <RelativeLayout
                android:paddingTop="5dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/repay_layout"
                android:id="@+id/expenditure_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/bill_expenditure_time_tv"
                    android:textSize="12sp"
                    android:textColor="@color/color_text_gray_c9"
                    android:layout_width="wrap_content"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:text="出账日期:"/>
                <TextView
                    android:layout_toRightOf="@+id/bill_expenditure_time_tv"
                    android:id="@+id/bill_expenditure_time"
                    android:textSize="12sp"
                    android:gravity="right"
                    android:textColor="@color/color_text_gray_c9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018年07月08日"/>
            </RelativeLayout>
            <RelativeLayout
                android:paddingTop="5dp"
                android:layout_below="@+id/expenditure_layout"
                android:id="@+id/quota_layout"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/bill_quota_time_tv"
                    android:textSize="12sp"
                    android:textColor="@color/color_text_gray_c9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总额度:"/>
                <TextView
                    android:layout_toRightOf="@+id/bill_quota_time_tv"
                    android:id="@+id/bill_quota_time"
                    android:textSize="12sp"
                    android:textColor="@color/color_text_gray_c9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="88888"/>
            </RelativeLayout>
            <RelativeLayout
                android:paddingTop="5dp"
                android:layout_below="@+id/quota_layout"
                android:id="@+id/integral_layout"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/bill_integral_time_tv"
                    android:textSize="12sp"
                    android:textColor="@color/color_text_gray_c9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分:"/>
                <TextView
                    android:layout_toRightOf="@+id/bill_integral_time_tv"
                    android:id="@+id/bill_integral_time"
                    android:textSize="12sp"
                    android:textColor="@color/color_text_gray_c9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8888"/>
            </RelativeLayout>
        </RelativeLayout>
        </LinearLayout>
        <TextView
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="示例图"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>